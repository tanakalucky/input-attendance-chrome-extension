{
  "service": "app",
  "dockerComposeFile": "docker-compose.yml",
  "workspaceFolder": "/app",
  "customizations": {
    "vscode": {
      "extensions": [
        "eamodio.gitlens",
        "bradlc.vscode-tailwindcss"
      ],
      "settings": {
        "editor.tabSize": 2,
        "files.associations": {
          "*.css": "tailwindcss"
        }
      }
    }
  }
}
